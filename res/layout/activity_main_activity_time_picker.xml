<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.timepickerclass.MainActivityTimePicker" 
    android:orientation="vertical"
    >

            <AnalogClock
        android:id="@+id/analog_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
  
        />
            
    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/analog_clock"
        android:text="Alarm set time" 
        />
    
        <TextView
        android:id="@+id/tvbottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv"
        android:layout_toRightOf="@+id/analog_clock"
        android:text="Alarm repeat" 
        />
        
        <TextView
        android:id="@+id/tvbottom1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvbottom"
        android:layout_toRightOf="@+id/analog_clock"
        android:text="lat_lon" 
        />
        
    
        
               <ImageView
        android:id="@+id/alm1290"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvbottom1"
        android:layout_alignParentRight="true"
        android:src="@drawable/alarmon64x64"
        />
        
               <ImageView
        android:id="@+id/alm1291"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvbottom1"
        android:layout_toLeftOf="@+id/alm1290"
        android:src="@drawable/notifsoundoff"
        />
        
        
        
            <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="set alarm start time" 
        android:id="@+id/settime"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/analog_clock"
        />
            
     
            
            
            
            <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="repeat every 1 minute" 
        android:id="@+id/repeat1minute"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/settime"
        />
            
            
            
                  <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="repeat every 30 mins" 
        android:id="@+id/repeat30mins"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/repeat1minute"
        />
                  
                  
                  
            
            
            
            
            
      <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="repeat every 1 hours" 
        android:id="@+id/repeat1hours"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/repeat30mins"
        />
      
      <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="repeat every 4 hours" 
        android:id="@+id/repeat4hours"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/repeat1hours"
        />
      
      
      
           <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="cancel repeat alarm" 
        android:id="@+id/cancelrepeatalarm"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/repeat4hours"
        />
      
      
      
            
            
            
    
        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="activate alarm" 
        android:id="@+id/bt"
                android:layout_alignParentStart="true"
        android:layout_below="@+id/cancelrepeatalarm"
        />

        <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="alarm cancel" 
        android:id="@+id/btcancel"
                android:layout_alignParentStart="true"
        android:layout_below="@+id/bt"
        />
        

        
</RelativeLayout>
