<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    
    <AnalogClock
        android:id="@+id/analog_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        />
		
        <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/alarmTimePicker"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/analog_clock"
        />

    <Button
        android:id="@+id/alarmOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm Off" 
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        />

      <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Alarm"
        android:id="@+id/alarmSet"
        android:layout_below="@+id/alarmOff"
        android:layout_alignParentRight="true"
        />  
        
            <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLR Alarm"
        android:id="@+id/alarmClr"
        android:layout_below="@+id/alarmSet"
        android:layout_alignParentRight="true"
        />  
        
       <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ALARM textview"
        android:id="@+id/alarmText"
        android:layout_below="@+id/alarmTimePicker"
        android:layout_alignParentLeft="true"
        
        
        
         /> 
        
        
        
    

        <TextView
            android:id="@+id/tv22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="12345657657657"
 
          android:layout_below="@+id/alarmText"
        android:layout_alignParentLeft="true"
            android:gravity="top|left"
			android:inputType="textMultiLine"
			
           />

   <CalendarView
android:id="@+id/simpleCalendarView"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:firstDayOfWeek="1"
android:layout_below="@+id/tv22"
android:layout_alignParentLeft="true"
/>     

   
    
    
</RelativeLayout> 








