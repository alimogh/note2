<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_height="match_parent" >
 
        <TextView
        android:id="@+id/status1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34dp"
        android:layout_alignParentTop="true"
             android:layout_centerHorizontal="true"
 
        android:textColor="#ffffff"
        android:text="@string/timerVal" 
        />
    
    <TextView
        android:id="@+id/timerValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34dp"
        android:layout_below="@+id/status1"
             android:layout_centerHorizontal="true"

        android:textColor="#ffffff"
        android:text="@string/timerVal" 
        />

       <ImageView
        android:id="@+id/imageView12345"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timerValue"
        android:layout_centerHorizontal="true"

        android:src="@drawable/audioplay" />
    
    <ProgressBar
        android:id="@+id/simpleProgressBar"
         style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"       
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView12345"
        />
    
   <Button
        android:id="@+id/pause100"
        android:layout_width="90dp"
        android:layout_height="45dp"
         android:layout_below="@+id/simpleProgressBar"
        android:layout_alignParentLeft="true"
        android:text="Pause" />

    <Button
        android:id="@+id/startButton"
        android:layout_width="90dp"
        android:layout_height="45dp"
         android:layout_below="@+id/simpleProgressBar"
        android:layout_centerHorizontal="true"
        android:text="@string/startButtonLabel" />

    <Button
        android:id="@+id/clrButton"
        android:layout_width="90dp"
        android:layout_height="45dp"
         android:layout_below="@+id/simpleProgressBar"
        android:layout_alignParentRight="true"
        android:text="@string/clrButtonLabel" />

    
    <SeekBar
        android:id="@+id/seekBar12"
        android:max="100"
        android:progress="50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
               android:layout_below="@+id/startButton"
               android:progressDrawable="@drawable/customplayer"
        />
    
           <TextView
        android:id="@+id/volstatus1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34dp"
        android:layout_toRightOf="@+id/seekBar12"
              android:layout_below="@+id/startButton" 
        android:textColor="#ffffff"
        android:text="Val" 
        />
    
    
    <Button
        android:id="@+id/button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
 
        android:layout_below="@+id/seekBar12"

        android:text="Exit" />
    
</RelativeLayout>
